@model List<EmpleadoModel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
  <div class="card-header">
 Lista de Empleados
  </div>
  <div class="card-body">
 

        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo empleado</a>
        </br>
        </br>

        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Documento</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                  <tr>
                      <td>@item.Nombres</td>
                           <td>@item.Apellidos</td>
                                <td>@item.Documento</td>
                                     <td>@item.Telefono</td>
                                          <td>@item.Correo</td>
                                                                  <td> 
                                                                          <a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-Id="@item.Id"> <i class="bi bi-pencil-square"></i> </a> 
                                                                      <a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-danger btn-sm"  asp-route-Id="@item.Id"><i class="bi bi-trash3"></i></a>
                                                                      </td>
                  </tr>  
                }
            </tbody>
        </table>
  </div>
</div>

